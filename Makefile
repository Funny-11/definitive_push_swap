NAME = push_swap

CC = cc

CFLAGS = -Wall -Wextra -Werror -g -Ilibft

#sorgenti
SRCS = ./main.c \
	./operations.c \
	./parsing.c \
	./sort_large.c \
	./sort_small.c \
	./stack.c

#librerie esterne
LIBFT_DIR = libft
LIBFT = $(LIBFT_DIR)/libft.a

all: $(LIBFT) $(NAME)

$(LIBFT):
	@echo "Compilazione Libft...⏳"
	$(MAKE) -C $(LIBFT_DIR)

$(NAME): $(SRCS)
	$(CC) $(CFLAGS) -o $@ $^ -L$(LIBFT_DIR) -lft
	$(MAKE) message

clean:
	$(MAKE) -C $(LIBFT_DIR) clean

fclean: clean
		rm -f $(NAME)
		$(MAKE) -C $(LIBFT_DIR) fclean

re: fclean all

message:

